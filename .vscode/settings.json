{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.expo": true,
    ".vscode": true,
    "node_modules": true,
    ".gitignore": true,
    "bun.lock": true,
    ".env": true,
    "metro.config.js": true,
    "tsconfig.json": true,
    "nativewind-env.d.ts": true,
    "eas.json": true,
    "babel.config.js": true
  },
  "hide-files.files": [
    ".vscode",
    "node_modules",
    ".gitignore",
    "bun.lock",
    ".env",
    "metro.config.js",
    "tsconfig.json",
    "nativewind-env.d.ts",
    "eas.json",
    "babel.config.js"
  ],
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}
